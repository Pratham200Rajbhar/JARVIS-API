{
  "apps": [
    {
      "name": "jarvis-api",
      "script": "index.js",
      "instances": 1,
      "exec_mode": "cluster",
      "env_file": ".env",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3002
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3002
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3002
      },
      "log_file": "./logs/jarvis-api.log",
      "error_file": "./logs/jarvis-api-error.log",
      "out_file": "./logs/jarvis-api-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 10000,
      "watch": false,
      "ignore_watch": ["node_modules", "logs", "public"]
    }
  ]
}
